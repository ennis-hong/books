<% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |message| %>
        <div class="alert"><%= message %></div>
    <% end %>
<% end %>
<%= form_with model:@book, data: { turbo: false} do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'field' %>
    </div>
    <div>
        <%= f.label :price %>
        <%= f.number_field :price, class: 'field' %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description, class: 'field' %>
    </div>
    <div>
        <%= f.submit class: 'btn' %>
    </div>
<% end %>