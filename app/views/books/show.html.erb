<%= link_to "編輯", edit_book_path(@book), class: "btn" %>
<%= link_to "刪除", book_path(@book), data:{
    turbo_method: "delete",
    turbo_confirm: "確定刪除？"
}, class: "btn danger" %>
<section class="ml-2 text-lg">
    <h1>Title:<%= @book.title %></h1>
    <h3>Price:<%= @book.price %></h3>
    <label>
        Description:
        <p>
            <%= simple_format @book.description %>
        </p>
    </label>
</section>